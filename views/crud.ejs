<%- include('partials/header') %>

<section>
    <header class="main">
        <h1>Nézők Kezelése (CRUD)</h1>
    </header>

    <p>A <code>nezo</code> tábla adatai. Ez a CRUD menüpont "Read" (Olvasás) funkciója.</p>
    
    <ul class="actions">
        <li><a href="/crud/add" class="button primary">Új néző hozzáadása</a></li>
    </ul>
    
    <div class="table-wrapper">
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Név</th>
                    <th>Férfi?</th>
                    <th>Bérletes?</th>
                    <th>Műveletek</th>
                </tr>
            </thead>
            <tbody>
                <% if (spectators.length > 0) { %>
                    <% spectators.forEach(nezo => { %>
                        <tr>
                            <td><%= nezo.id %></td>
                            <td><%= nezo.nev %></td>
                            <td><%= nezo.ferfi ? 'Igen' : 'Nem' %></td>
                            <td><%= nezo.berletes ? 'Igen' : 'Nem' %></td>
                            <td>
                                <a href="/crud/edit/<%= nezo.id %>" class="button small">Edit</a>
                                <a href="/crud/delete/<%= nezo.id %>" class="button small" style="background-color: #f56a6a;" onclick="return confirm('Biztosan törölni szeretné ezt a nézőt?');">
                                    Delete
                                </a>
                            </td>
                        </tr>
                    <% }) %>
                <% } else { %>
                    <tr>
                        <td colspan="5">Nincsenek nézők az adatbázisban.</td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>

</section>

<%- include('partials/footer') %>