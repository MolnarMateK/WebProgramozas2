<%- include('partials/header') %>

<section>
    <header class="main">
        <h1><%= title %></h1>
    </header>

    <p>Itt láthatók az adatbázisból kiolvasott, kapcsolat űrlapon küldött üzenetek.</p>
    
    <div class="table-wrapper">
        <table>
            <thead>
                <tr>
                    <th>Dátum</th>
                    <th>Név</th>
                    <th>E-mail</th>
                    <th>Üzenet</th>
                </tr>
            </thead>
            <tbody>
                <% if (messages.length > 0) { %>
                    <% messages.forEach(message => { %>
                        <tr>
                            <td><%= new Date(message.sent_at).toLocaleString('hu-HU') %></td>
                            <td><%= message.nev %></td>
                            <td><%= message.email %></td>
                            <td><%= message.uzenet %></td>
                        </tr>
                    <% }) %>
                <% } else { %>
                    <tr>
                        <td colspan="4">Nincsenek megjeleníthető üzenetek.</td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>

</section>

<%- include('partials/footer') %>